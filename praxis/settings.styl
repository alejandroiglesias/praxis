// General variable structure
//
// Variable format should follow the `$component-modifier-state-property` order.


// Colors
//
// Grayscale and brand colors for use across Praxis.

$alabaster = #fafafa
$alto = #dad9da
$french-blue = #0076ba
$gallery = #f0f0f0
$mountain-mist = #979494
$picton-blue = #54abf4
$storm-dust = #646261
$white = #fff;
$white-lilac = #eae8ec

$cerulean = #179BE7
$emerald = #5ED67F
$saffrom = #F9BF32
$terra-cotta = #E96B5B

$brand-primary = $cerulean
$brand-success = $emerald
$brand-warning = $saffrom
$brand-danger = $terra-cotta


// Options

$enable-flex = false


// Spacing

$spacer   = 1rem
$spacer-x = $spacer
$spacer-y = $spacer


// Grid

$grid-gutter-width = 30px


// Typography
//
// Font, line-height, and color for body text, headings, and more.

$font-size = 16px
$font-color = #333

$ligatures = true


// Components

// Still need to standarize this value since Axis does its own calculations.
$border-radius = .25rem;


// Card

$card-bg = $white
$card-border-radius = $border-radius
$card-box-shadow = 0 0 1px 0 rgba(224, 229, 232, .8), 0 1px 2px 0 rgba(224, 229, 232, .6)
$card-spacer = 1.25rem
